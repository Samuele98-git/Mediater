generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id            Int      @id @default(autoincrement())
  username      String   @unique
  password      String?
  role          String   @default("viewer") // "admin" or "viewer"
  avatar        String?
  auth_provider String   @default("local") // "local" or "oidc"
  created_at    DateTime @default(now())
}

model Media {
  id          Int      @id @default(autoincrement())
  title       String
  path        String?  
  thumbnail   String?
  category    String   @default("General")
  type        String   @default("movie") 
  parentId    Int?     
  order       Int      @default(0) 
  created_at  DateTime @default(now())
}

model Setting {
  key   String @id
  value String
}